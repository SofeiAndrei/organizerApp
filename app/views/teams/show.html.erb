<h1>
  <%= @team.name %>
</h1>
<%= link_to "Edit Team", edit_team_path(@team), class: "btn btn-primary"%>
<% if current_user?(@team.owner)%>
  <%= link_to "Delete", @team, method: "delete",
                    data: {confirm: "Are you sure?"},
                    class: "btn btn-primary" %>
<% end %>