<div class="jumbotron">
  <h1>My Teams</h1>
  <%= link_to "Create a new team", new_team_path , class:'btn btn-primary button-dark'%>
  <br/><br/>
  <p>
    <%= "Teams (#{@teams.size})" %>
  </p>
  <ul class="teams">
    <%= render @teams %>
  </ul>
  <br/>
  <p>
    <%= "Received Team Invitations (#{@team_invitations.size})" %>
  </p>
  <ul class="team_invitations">
    <%= render @team_invitations %>
  </ul>
</div>